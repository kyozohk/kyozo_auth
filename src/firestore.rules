/**
 * @fileOverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces data access based on user authentication and relationships defined
 * within the data itself (e.g., community or channel membership).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * Allow read for any authenticated user.
     * Allow write only for the owner of the document.
     */
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /Users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    /**
     * @description Public read access for communities.
     * Writing is restricted to authenticated users as a basic protection.
     */
    match /communities/{communityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    /**
     * @description Access control for conversation channels.
     * Authenticated users can read channel data if they are one of the participants.
     */
    match /channels/{channelId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.users;
      // Write access could be more restrictive, e.g., only by community admins or participants
      allow write: if request.auth != null; 
    }

    /**
     * @description Access control for messages. Messages are stored in a top-level collection.
     * A user can read a message if they are a participant in the channel the message belongs to.
     * A user can create a message if they are the sender and are part of the channel.
     */
    match /messages/{messageId} {
       allow read: if request.auth != null && get(/databases/$(database)/documents/channels/$(resource.data.channel)).data.users.hasAny([request.auth.uid]);
       allow create: if request.auth != null && request.resource.data.sender == request.auth.uid && get(/databases/$(database)/documents/channels/$(request.resource.data.channel)).data.users.hasAny([request.auth.uid]);
       allow update, delete: if request.auth != null && resource.data.sender == request.auth.uid;
    }
  }
}
