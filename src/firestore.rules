/**
 * @fileOverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model where each user can only access their own data.
 * Public read access is granted for communities. Channel access is restricted to its members.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * Allow read for any authenticated user.
     * Allow write only for the owner of the document.
     */
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /Users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    /**
     * @description Public read access for communities.
     * Writing is restricted to authenticated users as a basic protection.
     */
    match /communities/{communityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    /**
     * @description Access control for conversation channels.
     * Users can read/write a channel only if they are a participant.
     */
    match /channels/{channelId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.users;

      /**
       * @description Access control for messages within a channel.
       * Users can read messages if they are part of the channel.
       * Users can create messages if they are the sender and part of the channel.
       */
      match /messages/{messageId} {
         allow read: if request.auth != null && get(/databases/$(database)/documents/channels/$(channelId)).data.users.hasAny([request.auth.uid]);
         allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && get(/databases/$(database)/documents/channels/$(channelId)).data.users.hasAny([request.auth.uid]);
         allow update, delete: if request.auth != null && resource.data.senderId == request.auth.uid;
      }
    }
  }
}
