{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user account in the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "signUpTimestamp": {
          "type": "string",
          "description": "Timestamp of when the user signed up.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "signUpTimestamp"
      ]
    },
    "UserProfile": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "UserProfile",
        "type": "object",
        "description": "Represents a user's public profile.",
        "properties": {
          "name": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["name", "lastName", "email"]
      },
    "Community": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Community",
      "type": "object",
      "description": "Represents a community or group.",
      "properties": {
        "name": { "type": "string", "description": "The name of the community." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "createdAt"]
    },
    "Participation": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Participation",
        "type": "object",
        "description": "Links a user to a community, signifying membership.",
        "properties": {
          "communityId": { "type": "string" },
          "userId": { "type": "string" }
        },
        "required": ["communityId", "userId"]
      },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a message sent by a user.",
      "properties": {
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "senderId": { "type": "string", "description": "The UID of the user who sent the message." },
        "senderName": { "type": "string" }
      },
      "required": ["text", "createdAt", "senderId"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Stores user profile data."
        }
      },
      {
        "path": "/communities/{communityId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Community" },
          "description": "Root collection for communities."
        }
      },
      {
        "path": "/participations/{participationId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Participation" },
          "description": "Collection linking users and communities."
        }
      },
      {
          "path": "/messages/{messageId}",
          "definition": {
              "schema": { "$ref": "#/backend/entities/Message"},
              "description": "Root collection for all messages."
          }
      }
    ]
  }
}
