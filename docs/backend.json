{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user account in the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "signUpTimestamp": {
          "type": "string",
          "description": "Timestamp of when the user signed up.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "signUpTimestamp"
      ]
    },
    "Community": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Community",
      "type": "object",
      "description": "Represents a community or group.",
      "properties": {
        "name": { "type": "string", "description": "The name of the community." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "createdAt"]
    },
    "Member": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Member",
      "type": "object",
      "description": "Represents a member within a community.",
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "member"] }
      },
      "required": ["name", "role"]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a message sent by a user.",
      "properties": {
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "senderId": { "type": "string", "description": "The UID of the user who sent the message." },
        "senderName": { "type": "string" }
      },
      "required": ["text", "createdAt", "senderId", "senderName"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profile data."
        }
      },
      {
        "path": "/communities/{communityId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Community" },
          "description": "Root collection for communities."
        }
      },
      {
        "path": "/communities/{communityId}/members/{memberId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Member" },
          "description": "Sub-collection for members within a community. memberId should be a userId."
        }
      },
      {
          "path": "/messages/{messageId}",
          "definition": {
              "schema": { "$ref": "#/backend/entities/Message"},
              "description": "Root collection for all messages."
          }
      }
    ]
  }
}
